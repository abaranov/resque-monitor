!!!
%html{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}/
    %meta{:content => 'IE=Edge,chrome=1', 'http-equiv' => 'X-UA-Compatible'}/
    %meta{:content => 'width=device-width, initial-scale=1.0', :name => 'viewport'}/
    %meta{content: 'yes', name: 'mobile-web-app-capable'}/
    %meta{content: 'yes', name: 'apple-mobile-web-app-capable'}/
    %title= content_for?(:title) ? yield(:title) : 'Resque Monitor'
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js" type="text/javascript"></script>
    = stylesheet_link_tag 'application', :media => 'all'
    = javascript_include_tag 'application'
  %body
    #wrap
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            %a.btn.btn-navbar{'data-target' => '.nav-collapse', 'data-toggle' => 'collapse'}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to 'Resque Monitor', root_path, class: 'brand'
            .container.nav-collapse
              %ul.nav
                %li.menu= link_to "API's", root_path, role: 'button'
                %li.menu= link_to 'Collectors', monitors_show_collectors_path, role: 'button'
                -#%li.dropdown
                -#  = link_to '#', class: 'dropdown-toggle', 'data-toggle' => 'dropdown', role: 'button' do
                -#    Reports
                -#    %b.caret
                -#  %ul.dropdown-menu{'aria-labelledby' => 'dashboards_dropdown', role: 'menu'}
                -#    %li.nav-header System Reports
                -#    %li= link_to 'Alarm History', '#', tabindex: '-1', role: 'menuitem'
                -#    %li= link_to 'Top Alarms', '#', tabindex: '-1', role: 'menuitem'

      .container-fluid
        .container
          .row
            .span12
              = notice_message
        .row-fixed
          .span12
            = yield

      #push

      #footer
        .container
          .pull-left.clocks= 'by-by'

